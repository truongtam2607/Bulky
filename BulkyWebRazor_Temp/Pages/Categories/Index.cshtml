@page 
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories page";
}
<div class="container">
    <div class="row pt-4">
        <div class="col pt-6 pb-3">
            <h2 class="text-bg-white">
                Category List
            </h2>
        </div>
        <div class="col pt-6 text-end">
            <a asp-page="/categories/create" class=" btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Category
            </a>

        </div>

    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="text-center">
                    Id
                </th>
                <th class="text-center">
                    Category Name
                </th>
                <th class="text-center">
                    Display Order
                </th>
                <th class="text-center">
                    Custom
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var obj in Model.CategoryList.OrderBy(u => u.Id))
            {


                <tr>
                    <td class="text-center">@obj.Id</td>
                    <td class="text-center">@obj.Name</td>
                    <td class="text-center">@obj.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn btn-group" role=" group">
                            <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-page="/categories/delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
